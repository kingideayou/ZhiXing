/* miniprogram/pages/index/main.wxss */
@import "../test/test.wxss";

page {
  height: 100%;
}

.main-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx 0 0 12rpx;
}

.main-root {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #EDEDED;
  box-sizing: border-box;
}

.main-container {
  width: 80%;
  height: 140rpx;
  display: flex;
  align-items: center;
  margin: 20rpx;
  margin-top: 30%;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-sizing: border-box;
} 


.main-container-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12rpx;
  margin-top: 80rpx;
}

.content-parent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-title {
	font-size: 36rpx;
	color: #333333;
	font-weight: bold;
	padding-left: 36rpx;
}


.main-sub-title {
  font-size: 32rpx;
	color: #565656;
	font-weight: bold;
	padding-left: 36rpx;
}

.main-tip-title {
  font-size: 38rpx;
	color: #333333;
	font-weight: bold;
	padding-left: 36rpx;
}

.main-tip-content {
	display: flex;
	flex-direction: column;
	font-size: 30rpx;
	/* color: #74ebbd; */
	color: #333333;
	padding-left: 52rpx;
	padding-top: 18rpx;
	padding-bottom: 4rpx;
}